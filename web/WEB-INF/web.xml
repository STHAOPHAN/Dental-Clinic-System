<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>Controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetEmployeesController</servlet-name>
        <servlet-class>Controllers.GetEmployeesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchEmployeeByRoleController</servlet-name>
        <servlet-class>Controllers.SearchEmployeeByRoleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchEmployeeByNameController</servlet-name>
        <servlet-class>Controllers.SearchEmployeeByNameController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetEmployeeByIDController</servlet-name>
        <servlet-class>Controllers.GetEmployeeByIDController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetEmployeesController</servlet-name>
        <url-pattern>/GetEmployeesController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchEmployeeByRoleController</servlet-name>
        <url-pattern>/SearchEmployeeByRoleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchEmployeeByNameController</servlet-name>
        <url-pattern>/SearchEmployeeByNameController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetEmployeeByIDController</servlet-name>
        <url-pattern>/GetEmployeeByIDController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>admin.jsp</welcome-file>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
